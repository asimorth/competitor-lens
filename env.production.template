# Production Environment Variables Template
# Copy this file to .env.production and fill in the values

# Database
DB_USER=competitorlens_user
DB_PASSWORD=your_strong_db_password_here

# Redis
REDIS_PASSWORD=your_strong_redis_password_here

# Security
JWT_SECRET=your_very_long_random_jwt_secret_here

# API Keys
OPENAI_API_KEY=your_openai_api_key_here

# URLs and Origins
NEXT_PUBLIC_API_URL=https://api.competitorlens.com
ALLOWED_ORIGINS=https://competitorlens.com,https://www.competitorlens.com

# Storage Configuration
# Options: 'local' or 's3'
STORAGE_TYPE=local

# AWS S3 Configuration (only if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=eu-west-1
S3_BUCKET_NAME=competitorlens-uploads
CDN_URL=

# Optional: Email Configuration
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@competitorlens.com

# Optional: Monitoring
SENTRY_DSN=
LOG_LEVEL=info

# Optional: Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
